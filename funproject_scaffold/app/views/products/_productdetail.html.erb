<div id="<%= dom_id product %>">
  <h1>Product Detail</h1><br>
  <p><b>Product Name : </b> <%= @product.name %></p>
  <p><b>Size : </b> <%= @product.size %></p>
  <p><b>Categories : </b> <%= @product.categories %></p>
  <p><b>Ingredients : </b> <%= @product.ingredients %></p>
  <p><b>UPC Code : </b> <%= @product.code %></p>
  <img src="<%= @product.image %>" alt="Image Address Is Invalid Or Check Your Internet Connection" width="250px" height="250px">
</div>